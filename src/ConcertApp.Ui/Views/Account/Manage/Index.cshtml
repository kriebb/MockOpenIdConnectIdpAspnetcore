@model ConcertApp.Ui.Models.ManageAccountViewModel

<div class="account-container">
    @if(Model.IsAuthenticated)
    {
        <div class="identity-info">
            <h2 class="section-title">Identity Information</h2>
            <ul class="user-details">
                <li><strong>Name:</strong> @Model.Username</li>
                <li><strong>Authentication Type:</strong> @Model.AuthenticationType</li>
                <li><strong>Is Authenticated:</strong> Yes</li>
            </ul>

            <h2 class="section-title">Claims</h2>
            <table class="table user-claims">
                <thead class="claims-header">
                    <tr>
                        <th>Type</th>
                        <th>Value</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var claim in Model.Claims)
                    {
                        <tr>
                            <td>@claim.Type</td>
                            <td>@claim.Value</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <p class="login-prompt">Please log in to view your identity information.</p>
    }
</div>